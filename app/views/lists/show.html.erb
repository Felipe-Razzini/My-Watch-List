<div class="movies-container">
  <div class="movie-search">
    <div class="list-title">
      <%= @list.name.upcase %>
    </div>
    <div class="add-movie-button">
      <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-danger text-white" %>
    </div>
  </div>

  <div class="row">
    <% @list.movies.each do |movie| %>
    <div class="col-lg-3 mb-4">
      <div class="card-list">
        <img class="card-img-top" src="<%= movie.poster_url %>" alt="Movie Poster">
        <div class="card-body">
          <h5 class="card-title"><%= movie.title %></h5>
          <p class="card-text"><%= movie.overview %></p>
          <p class="card-text">
            <%= movie.rating.to_f %>
            <i class="fa-solid fa-star"></i>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
