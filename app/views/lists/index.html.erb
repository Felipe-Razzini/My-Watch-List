<div class="movie-banner">
  <h1>Create your own movie lists</h1>
  <h4>Organize, review, and much more.</h4>
  <%= link_to "New list", new_list_path, class: "btn btn-danger btn-lg" %>
</div>

<%# Displays the lists created by the user %>
<div class="list-container">
  <h2><strong>YOUR LISTS</strong></h2>
  <div class="row">
    <% @lists.each do |list| %>
    <div class="col-sm-4">
      <div class="card">
        <%= link_to "x", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "close-icon-list" %>
        <div class="card-body">
          <h5><%= link_to list.name, list_path(list), class: "card-title" %></h5>
        </div>
      </div>
    </div>
  <% end %>
</div>
