<div class="container py-5">

  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a movie to your <%= @list.name %> list</h3>
       <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.input :comment %>
          <%= f.input :movie_id, collection: @movies.map { |movie| [movie['original_title'], movie['id']] }, include_blank: 'Select a movie' %>
          <%= f.submit "Submit bookmark", class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
